body
  height: 100%
  background: #aaa
  font: 14px "Lucida Grande", Helvetica, Arial, sans-serif
  overflow: hidden
  -moz-user-select: none;
  -khtml-user-select: none;
  -webkit-user-select: none;
  user-select: none;
  #stage
    position: fixed
    top: 0px
    left: 0px
    width: 100%
    height: 100%
    z-index: 1
  #menu
    position: fixed
    top: 5px
    left: 5px
    z-index:2
  #slaps-container
    position: fixed
    bottom: 15px
    left: 15px
    width: 80%
    z-index: 2
    .slap
      float: left
      margin-right:8px
  .fraenk
    background: transparent url(/img/sprites/frank_right.png) 0 0 no-repeat;
    position: absolute;
    top: 150px;
    left: 65px;
    width: 64px;
    height: 51px;
    z-index: 999;
    cursor: pointer;
  .fraenk-small
    background: transparent url(/img/sprites/frank_right_small.png) 0 0 no-repeat;
    position: absolute;
    top: 150px;
    left: 65px;
    width: 32px;
    height: 26px;
    z-index: 999;
    cursor: pointer;
